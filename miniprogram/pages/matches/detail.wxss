/* miniprogram/pages/matchList/detail.wxss */
.tab-page {
	display: flex;
	flex-direction: column;
}

.detail-block {
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	/*box-sizing: border-box;*/
	box-shadow: 1px 1px 3px #CCCCCC;
	background-color: white;
	margin-left: 30rpx;
	margin-right: 30rpx;
	margin-top: 50rpx;
	border-radius: 10rpx;
	width: auto;
}

.detail-title {
	width: 100%;
	height: 80rpx;
	padding-left: 20rpx;
	border-bottom: 1px solid #E5E5E5;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.detail-title-icon {
	height: 40rpx;
	width: 40rpx;
	margin: 10rpx;
}

.detail-title-text {
	width: 100%;
	margin-left: 20rpx;
	display: flex;
	flex-direction: row;
}

.detail-content {
	display: flex;
	flex-direction: row;
	height: 200rpx;
	width: 100%;
}

.detail-content-column {
	flex: 2;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin-top: 30rpx;
	margin-bottom: 30rpx;
}

.detail-content-avatars {
	display: flex;
	flex-direction: row;
}

.detail-content-avatar1 {
	
}

.detail-content-avatar2 {
	
}

.detail-content-names {
	display: flex;
	flex-direction: row;
	width: 100%;
}

.detail-content-name {
	flex: 1;
	white-space:nowrap; 
	text-overflow: ellipsis;
	overflow: hidden;
	margin: 5rpx;
	text-align: center;
	font-size: 12px;
	width: 60px;
}

.detail-content-score {
	display: flex;
	align-items: center;
	justify-content: center;
	color: #0478F3;
	font-size: 22px;
}

.banner {
	/*height: 200rpx;*/
	width: 100%;
	z-index: -1;
}

.stats-container {
	margin-top: -250rpx;
	margin-left: 20rpx;
	margin-right: 20rpx;
	background-color: white;
	border-radius: 10rpx;
	box-shadow: 1px 1px 3px #CCCCCC;
	/*z-index: 0;*/
}

.avatar{   
	height: 40px;    
	width: 40px;    
	border-radius: 50%;
	margin: 10rpx;
}