/* miniprogram/pages/matchList/matchList.wxss */

/* @import "../../style/styles.wxss"; */

.header-toolbar {
  flex-direction: "column";
  /* align-items: "flex-end"; */
  background-color: red;
}


.btn-new {
  /* flex-direction: "column"; */
  background-color: grey;
}

.match-list-block {
	/*padding: 40 0 0 40rpx;*/
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	box-sizing: border-box;
	box-shadow: 1px 1px 3px #CCCCCC;
	background-color: white;
	margin-left: 30rpx;
	margin-right: 30rpx;
	margin-bottom: 40rpx;
	border-radius: 10rpx;
}

.match-list-navigator {
	margin: 0px;
	width: 100%;
	height: 100%;
}

.match-date {
	margin: 20rpx;
	width: 90%;
}

.match-progress-block {
	display: flex;
	flex-direction: row;
	width: 90%;
	height: 20rpx;
	margin-left: 5%;
	margin-bottom: 40rpx;
}

.match-progress-finish {
	height: 100%;
	background-color: blue;
	border-top-left-radius: 20rpx;
	border-bottom-left-radius: 20rpx;
}

.match-progress {
	height: 100%;
	background-color: orange;
	border-top-right-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
}

.match-progress-progress-full {
	height: 100%;
	flex: 1;
	background-color: orange;
	border-radius: 20rpx;
}

.match-progress-finish-full {
	height: 100%;
	flex: 1;
	background-color: blue;
	border-radius: 20rpx;
}

.match-info-block {
	border-width: 1px;
	display: flex;
	flex-direction: row;

}

.match-info-line {
	flex: 1;
	display: flex;
	flex-direction: column;
	border-top: 1px solid #E5E5E5;
}

.match-info-title {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin: 20rpx;
}

.match-info-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 20rpx;
}




