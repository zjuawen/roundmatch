<!--miniprogram/pages/players/playerList.wxml-->

<button class="userinfo-nickname" bindtap="onPlayerSelected">
	<text>完成</text>
</button>


<view 
	wx:for="{{players}}"
  	wx:key="{{item.id}}"
	class="uploader">


    <button class="userinfo-nickname" data-id="{{item.id}}" bindtap="onSelectPlayer">
	<image class="checkbox" wx:if="{{!item.enable}}" src="../../images/icon-emptybox.svg" mode="aspectFit"></image>
	<image class="checkbox" wx:if="{{item.enable}}" src="../../images/icon-checkbox.svg" mode="aspectFit"></image>
	  <text>{{item.name}}</text>
	  </button>
</view>

