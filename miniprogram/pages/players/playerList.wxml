<!--miniprogram/pages/players/playerList.wxml-->

<mp-navigation-bar loading="{{false}}" show="{{true}}" animated="{{animated}}" color="{{/*'red'*/}}" background="{{background}}" title="{{title}}" back="{{true}}"></mp-navigation-bar>

<button 
  class="weui-btn" type="primary" 
  style="margin-top: 20rpx" 
  bindtap="onPlayerSelected">
	下一步
</button>


<view 
  wx:for="{{players}}"
  wx:key="{{item.id}}"
  class="uploader">

  <!-- <label class="userinfo-nickname" >
    <checkbox value="{{item.id}}" checked="{{item.enable}}"/>{{item.name}}
  </label> -->
    <button class="userinfo-nickname" data-id="{{item.id}}" bindtap="onSelectPlayer">
	<image class="checkbox" wx:if="{{!item.enable}}" src="../../images/icon-emptybox.svg" mode="aspectFit"></image>
	<image class="checkbox" wx:if="{{item.enable}}" src="../../images/icon-checkbox.svg" mode="aspectFit"></image>
	  <text>{{item.name}}</text>
	  </button>
</view>

