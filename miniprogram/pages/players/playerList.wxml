<!--miniprogram/pages/players/playerList.wxml-->

<mp-navigation-bar loading="{{loading}}" show="{{true}}" animated="{{animated}}" color="{{/*'red'*/}}" background="{{'white'}}" title="{{title}}" back="{{true}}"></mp-navigation-bar>

<view class="page__bd">

  <view class="player-header" >

    <view class="player-header-status" >

      <image class="search-btn"
        bindtap="onSwitchSearchBar" 
        src="/images/player-search.svg" >
        </image>

      <view style=" flex: 1;color: grey; display: flex; justify-content: center; " >
        请选择4～8{{type=='fixpair'?'对':'人'}}后继续:（ {{selectCount}} ）
        </view>
        
      <button 
        class="weui-btn" type="primary" 
        disabled="{{nextDisable}}"
        size="mini"  bindtap="onPlayerSelectedDone"
        style="margin-left: 40rpx;margin-right: 40rpx;" >
      	下一步
      </button>
    </view>

    <mp-searchbar 
        wx:if="{{searchShow}}"
        class="player-header-search"
        focus="{{true}}"
        search="{{search}}"
        bindselectresult="onSelectResult" 
        placeholder="{{'搜索队员'}}" >
      </mp-searchbar>

  </view>

</view>

<view wx:if="{{!searchShow}}" style="height: 120rpx" />
<view wx:if="{{searchShow}}" style="height: 200rpx" />

<mp-cells title="已选择" >
  <view wx:if="{{type=='fixpair'}}" >
    <view style="display: flex;" 
      wx:for="{{selectedPlayerPairs}}" 
      wx:key="{{item._id}}">
    <mp-cell class="player-list-cell"
      style="width: 50%;" 
      value="{{item.player1.name}}" 
      data-index="{{index}}" 
      data-slot="{{1}}" 
      bindtap="onDeselectPlayer" >
        <image wx:if="{{item.player1}}" slot="icon" class="avatar"
          src="{{ (item.player1.avatarUrl)?item.player1.avatarUrl:defaultAvatar }}" >
        </image>
    </mp-cell>
    <mp-cell class="player-list-cell"
      style="width: 50%;" 
      data-index="{{index}}" 
      value="{{item.player2.name}}" 
      data-slot="{{2}}" 
      bindtap="onDeselectPlayer" >
        <image wx:if="{{item.player2}}"  slot="icon" class="avatar"
          src="{{ (item.player2.avatarUrl)?item.player2.avatarUrl:defaultAvatar }}" >
        </image>
    </mp-cell>
    </view>
  </view> 

  <view wx:if="{{type!='fixpair'}}" >
    <mp-cell class="player-list-cell"
      wx:for="{{selectedPlayers}}" wx:key="{{item._id}}"
      data-index="{{index}}" value="{{item.name}}" 
      bindtap="onDeselectPlayer" >
        <image slot="icon" class="avatar"
          src="{{ (item.avatarUrl)?item.avatarUrl:defaultAvatar }}" >
        </image>
    </mp-cell>
  </view>

</mp-cells>

<view style="height: 50rpx" />

<mp-cells title="俱乐部成员" >

