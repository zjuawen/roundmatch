/* miniprogram/pages/clubs/clubList.wxss */
.itemContent {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.avatar {
    height: 40px;
    width: 40px;
    border-radius: 50%;
    margin: 20rpx;
    box-shadow: 1px 1px 3px #CCCCCC;
}
.avatar-small {
    height: 30px;
    width: 30px;
    border-radius: 50%;
    margin: 10rpx;
    box-shadow: 1px 1px 3px #CCCCCC;
}
.vip {
    width: 40rpx;
    height: 40rpx;
    margin-top: -60rpx;
    margin-left: -120rpx;
    margin-right: 80rpx;
}
.owner {
    width: 40rpx;
    height: 40rpx;
    margin-right: 40rpx;
    margin-left: -20rpx;
}
.club-status {
    height: 40rpx;
    width: 40rpx;
    margin: 10rpx;
}
.password-input {
    background-color: lightgrey;
    margin-top: 20rpx;
    height: 60rpx;
    width: 300rpx;
}
.dialog-content-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.hyperlink-text {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    color: rgb(0, 90, 155);
    font-size: 14px;
    margin-left: 60rpx;
    text-underline-position: 2rpx;
}
.swipe-cell-left {
    background: green;
    width: 120rpx;
    text-align: center;
    padding-top: 28%;
    height: 100%;
    color: white;
}
.swipe-cell-right {
    background: orange;
    width: 120rpx;
    text-align: center;
    padding-top: 28%;
    height: 100%;
}
